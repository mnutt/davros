<div class="modal-title flex">
  <h2 class="text-lg font-bold">New Directory</h2>
  <span class="flex-1"></span>
  <button type="button" {{on "click" this.close}}>
    <Icon @icon="close"/>
  </button>
</div>

<form {{on "submit" this.create}}>
  <input type="text" label="Name" class="form-input my-4" placeholder="Name" value={{this.directoryName}} {{on "keyup" this.onChange}} {{did-insert this.focus}} />
  {{#if this.validationError}}
    <p class="text-red-500 font-sm" >{{this.validationError}}</p>
  {{/if}}

  <div class="form-actions flex">
    <span class="flex-1"></span>
    <button type="button" class="pr-4" {{on "click" this.close}}>Cancel</button>
    <button type="submit" class="button-primary" disabled={{false}}>
      Create
    </button>
  </div>
</form>
