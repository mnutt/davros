<div class="text-xs text-gray-700" ...attributes>
  <div class="relative inline-block w-10 mr-2 align-middle select-none">
    <input type="checkbox" name="toggle" id="toggle"
           class="toggle-checkbox absolute block w-6 h-6 rounded-full bg-white border-4 appearance-none cursor-pointer hidden"
           checked={{@value}}
           {{on "change" @onChange}}
    />
    <label for="toggle" class="toggle-switch absolute block w-6 h-6 rounded-full bg-white border-4 cursor-pointer transition-colors"></label>
    <label for="toggle" class="toggle-label block overflow-hidden h-6 rounded-full bg-gray-300 cursor-pointer transition-colors"></label>
  </div>
  <label for="toggle">{{yield}}</label>
</div>
